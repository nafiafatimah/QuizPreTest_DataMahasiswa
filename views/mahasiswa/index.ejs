<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Data Mahasiswa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .custom-form {
            margin-top: 50px; 
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
        }
       
    </style>
</head>
<body>

<div class="container">
    <% if (messages.success) { %>
    <div class="alert alert-info" role="alert">
        <%- messages.success %>
    </div>
    <% } %>
    <div class="row justify-content-center">
        <div class="col-md-10 custom-form"> 
            <a href="/mahasiswa/create" class="btn btn-sm btn-success mb-3">Tambah Mahasiswa</a> 
            <div class="">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">NRP</th>
                            <th scope="col">Nama Depan</th>
                            <th scope="col">Nama Belakang</th> 
                            <th scope="col">Jenis Kelamin</th>
                            <th scope="col">Umur</th> 
                            <th scope="col">Alamat</th> 
                            <th scope="col">Hobi</th> 
                            <th scope="col">Email</th> 
                            <th scope="col">No_telfon</th> 
                            <th scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < data.length; i++){ %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].nrp %></td>
                            <td><%= data[i].nama_depan %></td>
                            <td><%= data[i].nama_belakang %></td>
                            <td><%= data[i].jenis_kelamin %></td>
                            <td><%= data[i].umur %></td>
                            <td><%= data[i].alamat %></td> 
                            <td><%= data[i].hobi %></td> 
                            <td><%= data[i].email %></td> 
                            <td><%= data[i].no_telpon %></td> 
                            <td>
                                <a href="/mahasiswa/edit/<%= data[i].id_mahasiswa %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/mahasiswa/delete/<%= data[i].id_mahasiswa %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>
